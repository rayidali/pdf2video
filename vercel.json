{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python"
    },
    {
      "src": "static/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/api/index.py"
    }
  ],
  "env": {
    "MISTRAL_API_KEY": "@mistral_api_key",
    "ANTHROPIC_API_KEY": "@anthropic_api_key",
    "ELEVENLABS_API_KEY": "@elevenlabs_api_key",
    "SHOTSTACK_API_KEY": "@shotstack_api_key",
    "SHOTSTACK_ENV": "stage"
  }
}
